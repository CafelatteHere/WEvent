<div class="container-fluid">
<form>
  <div class="mb-3 mt-4">
    <h3>投稿する</h3>
    <%= form_with(model: @event, local:true) do |form| %>
      <div class="mb-3">
        <label for="inputEventName" class="form-label">イベント名</label>
        <div class="col-sm-8">
          <%= form.text_field        :name,        placeholder: "キャンプなど", class:"form-control" %>
        </div>
      </div>

      <div class="mb-3">
        <label for="inputEventPlace" class="form-label">場所</label>
        <div class="col-sm-8">
          <%= form.text_field        :location,    placeholder: "場所", class:"form-control" %>
        </div>
      </div>

      <div class="mb-3">
        <label for="inputEventGenre" class="form-label">イベントタイプをお選んでください</label>
        <div class="col-sm-8">
          <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box form-select", id:"event-genre"}) %>
        </div>
      </div>

      <div class="mb-3">
        <label for="inputEventGenre" class="form-label">イベント日付</label>
        <div class="col-sm-8">
          <%= form.text_field        :date,        placeholder: "2020/1/1", class:"form-control" %>
        </div>
      </div>

      <div class="mb-3">
        <label for="inputEventDescription" class="form-label">イベント詳細</label>
        <div class="col-sm-8">
          <%= form.text_area         :description, placeholder: "キャンプなど", class:"form-control"%>
        </div>
      </div>

      <input name="event[user_ids][]" type="hidden" value=<%= current_user.id %>>
      <%= form.submit "send", class:"btn btn-primary btn-lg" %>
    <% end %>
    <%# <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
  <button type="submit" >Submit</button> %>
</form>
</div>